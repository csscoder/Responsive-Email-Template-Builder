//- first column in row
mixin column-first(column, columnCommon )
	- var width = Math.floor(( (gContainer - gGutter) / gColumns) * column)
	- var columnCommon = (typeof columnCommon === 'undefined') ? "100%" : Math.floor((gContainer / gColumns) * columnCommon)
	| <table cellpadding="0" cellspacing="0" width="100%"><tr> <td style="padding-left: #{gGutter / 2}px; padding-right: #{gGutter / 2}px;" valign="top" align="center"><div class="st-columns">
	| <!--[if (gte mso 9)|(IE)]> <table width="#{columnCommon}" cellpadding="0" cellspacing="0"><tr><td width="#{width}" valign="top"> <![endif]-->
	.column.first&attributes(attributes)(style="max-width: #{width}px;")
		+table
			tr
				+td(style="padding-left: #{gGutter / 2}px; padding-right: #{gGutter / 2}px").m-coll-td
					block

