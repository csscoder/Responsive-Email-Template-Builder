					+roll(60)
					.st-center
						+button('https://github.com/csscoderRU/Responsive-Email-Template-Builder').st-button  GET YOUR COPY NOW
					+roll(60)
	//- End fist screen
	//- second screen
	+wrapper('#f5f5f5', '#eeeeef')
		+row
			+roll(20)
			+column-first(2)
				.st-center
					+roll(20)
