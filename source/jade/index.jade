					+roll(10)
					+hr('#e2e3e4', 2, '70%')
					+roll(10)
					.group-text
						| Lorem ipsum dolor sit ametconsectetur elit.
			+column-last(2)
				.st-center
					+roll(20)
					+img-inline('img/every.png', 40, 40, "FOR EVERYONE logo")
